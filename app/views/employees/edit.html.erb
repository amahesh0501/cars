<div class="page-container"><!-- add class "sidebar-collapsed" to close sidebar by default, "chat-visible" to make chat appear always -->

  <%= render 'layouts/sidebar' %>



  <div class="main-content">
    <%= render 'layouts/dealer_admin_nav' %>

    <div class="panel-body">
      <h2>Edit <%= @employee.name %></h2>
    <%= form_for [@dealership, @employee], :html => {:class => "form-horizontal form-groups-bordered"} do |f| %>
    <%= render 'layouts/error_messages', object: f.object %>
    <div class="form-group">
      <label class="col-sm-3 control-label">Name</label>
      <div class="col-sm-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">Social Security Number</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :ssn, value: @fields["ssn"], class: "form-control" %>
        <% else %>
          <%= f.text_field :ssn, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">E-Mail</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :email, value: @fields["email"],class: "form-control" %>
        <% else %>
          <%= f.text_field :email, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Phone</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :phone, value: @fields["phone"], class: "form-control" %>
        <% else %>
          <%= f.text_field :phone, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Address</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :address, value: @fields["address"], class: "form-control" %>
        <% else %>
          <%= f.text_field :address, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Upload an Image</label>
      <div class="col-sm-5">
        <%= f.file_field :image, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label"></label>
      <div class="col-sm-5">
            <%= f.submit "Edit Employee", :class => 'btn btn-success'  %>

      </div>
    </div>

    <% end %>
    </div>
  </div>




  </div>
</div>



