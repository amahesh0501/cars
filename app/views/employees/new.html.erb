<div class="page-container"><!-- add class "sidebar-collapsed" to close sidebar by default, "chat-visible" to make chat appear always -->

  <%= render 'layouts/sidebar' %>



  <div class="main-content">
    <%= render 'layouts/dealer_admin_nav' %>
    <%= form_for [@dealership, @employee] do |f| %>
    <%= render 'layouts/error_messages', object: f.object %>
      <div><%= f.label :name %><br />
      <%= f.text_field :name %></div>

      <div><%= f.label :ssn %><br />
      <%= f.text_field :ssn %></div>

      <div><%= f.label :email %><br />
      <%= f.text_field :email %></div>

      <div><%= f.label :phone %><br />
      <%= f.text_field :phone %></div>

      <div><%= f.label :address %><br />
      <%= f.text_field :address %></div>


      <div class="form-group">
        <%= f.label "Upload an image" %><br/>
        <%= f.file_field :image %>
      </div>



    <%= f.submit "Create Employee", :class => 'btn btn-success'  %>
    <% end %>




  </div>
</div>



