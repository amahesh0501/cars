<div class="page-container"><!-- add class "sidebar-collapsed" to close sidebar by default, "chat-visible" to make chat appear always -->

  <%= render 'layouts/sidebar' %>



  <div class="main-content">
    <%= render 'layouts/dealer_admin_nav' %>

    <h2>Edit <%= @form.name %> </h2>

    <div class="panel-body">

    <%= form_for [@dealership, @form], :html => {:class => "form-horizontal form-groups-bordered"} do |f| %>
    <%= render 'layouts/error_messages', object: f.object %>

    <div class="form-group">
      <label class="col-sm-3 control-label">Name</label>
      <div class="col-sm-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Description</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_area :description, value: @fields["description"], class: "form-control" %>
        <% else %>
          <%= f.text_area :description, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Upload Form PDF</label>
      <div class="col-sm-5">
        <%= f.file_field :form_pdf, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label"></label>
      <div class="col-sm-5">
            <%= f.submit "Edit Form", :class => 'btn btn-success'  %>
      </div>
    </div>
    <% end %>




  </div>
</div>


