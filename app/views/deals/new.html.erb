<div class="container">
<%= form_for [@dealership, @deal] do |f| %>
<div class="form-group">
  <%= f.label :car_id %><br/>
  <%= f.collection_select :car_id, @cars.all, :id, :model, prompt: true %>
</div>
<div class="form-group">
  <%= f.label :customer_id%><br/>
  <%= f.collection_select :customer_id, @customers.all, :id, :name, prompt: true %>
</div>
<div class="form-group">
  <%= f.label :user_id %><br/>
  <%= f.collection_select :user_id, @users.each, :id, :name, prompt: true %>
</div>

<h2>Financials</h2>
<div class="form-group">
  <%= f.label :purchase_price %><br/>
  <%= f.text_field :purchase_price %>
</div>
<div class="form-group">
  <%= f.label :sales_tax_amount %><br/>
  <%= f.text_field :sales_tax_amount %>
</div>
<div class="form-group">
  <%= f.label :down_payment %><br/>
  <%= f.text_field :down_payment %>
</div>
<div class="form-group">
  <%= f.label :term %><br/>
  <%= f.text_field :term %>
</div>
<div class="form-group">
  <%= f.label :apr %><br/>
  <%= f.text_field :apr %>
</div>
<div class="form-group">
  <%= f.label :trade_in_value %><br/>
  <%= f.text_field :trade_in_value %>
</div>

<h2>GAP Insurance</h2>
<div class="form-group">
  <%= f.label :gap_insurance %><br/>
  <%= f.check_box :gap_insurance %>
</div>
<div class="form-group">
  <%= f.label :gap_name %><br/>
  <%= f.text_field :gap_name %>
</div>
<%= f.submit "Create Deal", :class => 'btn btn-success'  %>
<% end %>
</div>
