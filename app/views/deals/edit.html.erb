<div class="container">
<%= form_for [@dealership, @deal] do |f| %>
<div class="form-group">
  <%= f.label :car_id %><br/>
  <%= f.collection_select :car_id, @cars.all, :id, :model, prompt: true %>
</div>
<div class="form-group">
  <%= f.label :customer_id%><br/>
  <%= f.collection_select :customer_id, @customers.all, :id, :name, prompt: true %>
</div>
<div class="form-group">
  <p><b>Employee</b></p>
  <%= f.collection_select :user_id, @users.each, :id, :name, prompt: true %>
</div>
<%= f.submit "Edit Deal", :class => 'btn btn-success'  %>
<% end %>
</div>