<div class="container">
<%= form_for [@dealership, @customer, @conversation] do |f| %>
<div class="form-group">
  <%= f.label :date %><br/>
  <%= f.date_field :date %>
</div>
<div class="form-group">
  <%= f.label :description %><br/>
  <%= f.text_area :description %>
</div>
<div class="form-group">
  <%= f.label :medium%><br/>
  <%= f.select :medium, ['In Person', 'Phone', 'E-Mail', 'Online Chat', 'Video Conference', 'Other']%>
</div>
<div class="form-group">
  <%= f.label :employee_id %><br/>
  <%= f.collection_select :employee_id, @employees.all, :id, :name, prompt: true, :selected => params[:employee_id] %>
</div>
<%= f.hidden_field :customer_id, :value => @customer.id %>
<%= f.submit "New Conversation", :class => 'btn btn-success'  %>
<% end %>
</div>