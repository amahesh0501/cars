<div class="container">
<%= form_for [@dealership, @car] do |f| %>
<div class="form-group">
  <%= f.label :year %><br/>
  <%= f.text_field :year %>
</div>
<div class="form-group">
  <%= f.label :make %><br/>
  <%= f.text_field :make %>
</div>
<div class="form-group">
  <%= f.label :model%><br/>
  <%= f.text_field :model %>
</div>

<div class="form-group">
  <%= f.label :vin %><br/>
  <%= f.text_field :vin %>
</div>
<div class="form-group">
  <%= f.label :miles %><br/>
  <%= f.text_field :miles %>
</div>
<div class="form-group">
  <%= f.label :purchase_price %><br/>
  <%= f.text_field :purchase_price %>
</div>
<div class="form-group">
  <%= f.label :sale_price %><br/>
  <%= f.text_field :sale_price %>
</div>
<div class="form-group">
  <%= f.label :description %><br/>
  <%= f.text_area :description %>
</div>
<%= f.submit "Edit Car", :class => 'btn btn-success'  %>
<% end %>
</div>