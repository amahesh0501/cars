<div class="container">
<%= form_for [@dealership, @car] do |f| %>
<div class="form-group">
  <%= f.label :year %><br/>
  <%= f.text_field :year %>
</div>
<div class="form-group">
  <%= f.label :make %><br/>
  <%= f.text_field :make %>
</div>
<div class="form-group">
  <%= f.label :model%><br/>
  <%= f.text_field :model %>
</div>

<div class="form-group">
  <%= f.label :vin %><br/>
  <%= f.text_field :vin %>
</div>
<div class="form-group">
  <%= f.label :miles %><br/>
  <%= f.text_field :miles %>
</div>

<div class="form-group">
  <%= f.label :transmission %><br/>
  <%= f.text_field :transmission %>
</div>
<div class="form-group">
  <%= f.label :body_style %><br/>
  <%= f.text_field :body_style %>
</div>
<div class="form-group">
  <%= f.label :exterior_color %><br/>
  <%= f.text_field :exterior_color %>
</div>
<div class="form-group">
  <%= f.label :interior_color %><br/>
  <%= f.text_field :interior_color %>
</div>
<div class="form-group">
  <%= f.label :fuel %><br/>
  <%= f.text_field :fuel %>
</div>
<div class="form-group">
  <%= f.label :engine %><br/>
  <%= f.text_field :engine %>
</div>
<div class="form-group">
  <%= f.label :doors %><br/>
  <%= f.text_field :doors %>
</div>
<div class="form-group">
  <%= f.label :wheel_base %><br/>
  <%= f.text_field :wheel_base %>
</div>
<div class="form-group">
  <%= f.label :license_plate %><br/>
  <%= f.text_field :license_plate %>
</div>

<h2> Purchase Infromation </h2>
<div class="form-group">
  <%= f.label :acquire_date %><br/>
  <%= f.text_field :acquire_date %>
</div>
<div class="form-group">
  <%= f.label :acquire_price %><br/>
