  <%= f.label :smog_date %><br/>
  <%= f.date_field :smog_date %>
</div>
<div class="form-group">
  <%= f.label :smogged_by %><br/>
  <%= f.text_field :smogged_by %>
</div>
<div class="form-group">
  <%= f.label :flooring %><br/>
