</div>
<div class="form-group">
  <%= f.label :flooring_company %><br/>
  <%= f.text_field :flooring_company %>
</div>
<div class="form-group">
  <%= f.label :flooring_date %><br/>
  <%= f.date_field :flooring_date %>
</div>

<%= f.submit "Edit Car", :class => 'btn btn-success'  %>
<% end %>
</div>