
<div class="page-container"><!-- add class "sidebar-collapsed" to close sidebar by default, "chat-visible" to make chat appear always -->

  <%= render 'layouts/sidebar' %>



  <div class="main-content">
    <%= render 'layouts/dealer_admin_nav' %>

    <h2>Edit Partner </h2>

    <div class="panel-body">

    <%= form_for [@dealership, @partner], :html => {:class => "form-horizontal form-groups-bordered"} do |f| %>
    <%= render 'layouts/error_messages', object: f.object %>



    <div class="form-group">
      <label class="col-sm-3 control-label">Name</label>
      <div class="col-sm-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Address Line 1</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :address_line_1, value: @fields["address_line_1"], class: "form-control" %>
        <% else %>
          <%= f.text_field :address_line_1, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Address Line 2</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :address_line_2, value: @fields["address_line_2"], class: "form-control" %>
        <% else %>
          <%= f.text_field :address_line_2, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">City</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :address_city, value: @fields["address_city"], class: "form-control" %>
        <% else %>
          <%= f.text_field :address_city, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">State</label>
      <div class="col-sm-5">
        <%= f.select :address_state, @us_states, include_blank: "Please select a state"%>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Address Zip</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :address_zip, value: @fields["address_zip"], class: "form-control" %>
        <% else %>
          <%= f.text_field :address_zip, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Contact Name</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :contact_name, value: @fields["contact_name"], class: "form-control" %>
        <% else %>
          <%= f.text_field :contact_name, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Contact E-Mail</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :contact_email, value: @fields["contact_email"], class: "form-control" %>
        <% else %>
          <%= f.text_field :contact_email, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Contact Phone</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :contact_phone, value: @fields["contact_phone"], class: "form-control" %>
        <% else %>
          <%= f.text_field :contact_phone, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Description</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_area :description,  class: "form-control" , value: @fields["description"] %>
        <% else %>
          <%= f.text_area :description,  class: "form-control"  %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Upload an Image</label>
      <div class="col-sm-5">
        <%= f.file_field :image, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label"></label>
      <div class="col-sm-5">
            <%= f.submit "Update Partner", :class => 'btn btn-success'  %>
      </div>
    </div>

    <% end %>
    </div>




  </div>
</div>





