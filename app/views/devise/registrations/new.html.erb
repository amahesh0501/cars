<div class="login-page ">
  <div class="login-container">


  <div class="login-caret">

    <div class="login-content">
      <br/><br/><br/>
      <a href="http://demo.neontheme.com/dashboard/main/" class="logo">
        <img src="http://demo.neontheme.com/assets/images/logo@2x.png" width="120" alt="" />
      </a>

  </div>





  <div class="login-form">

    <div class="login-content">
      <%= devise_error_messages! %>



      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>



        <div class="form-group">

          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-user"></i>
            </div>

            <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "E-Mail Address" %>
          </div>

        </div>


        <div class="form-group">

          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-key"></i>
            </div>
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>

        </div>


        <div class="form-group">

          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-check"></i>
            </div>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
          </div>

        </div>

        <div class="form-group">
          <%= f.submit "Sign Up", class: "btn btn-block btn-login" %>
        </div>






      <% end %>

      <a href="/users/sign_in">Already have an account? Sign In</a>




  </div>

</div>
</div>