<div class="login-page ">
  <div class="login-container">


  <div class="login-caret">

    <div class="login-content">
      <br/><br/><br/>
     <div class="logo">
       <a href="/" class="login_logo_text">
         <span class="light_logo_sidebar">Index</span><span class="bold_logo_sidebar">DMS</span>
       </a>
     </div>
  </div>

  <div class="login-form">

    <div class="login-content">
      <% flash.each do |name, msg| %>
                <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
            <% end %>



      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), id: "form_login") do |f| %>


        <div class="form-group">

          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-user"></i>
            </div>

            <%= f.email_field :email, :autofocus => true, class: "form-control signin-form", placeholder: "E-Mail Address" %>
          </div>

        </div>

        <div class="form-group">

          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-key"></i>
            </div>

              <%= f.password_field :password, class: "form-control signin-form", placeholder: "Password" %>
          </div>

        </div>

        <div class="form-group">
          <%= f.submit "Sign In", class: "btn btn-block btn-login" %>
        </div>






      <% end %>

      <a href="/users/sign_up">Don't have an account? Sign Up</a>




  </div>

</div>
</div>