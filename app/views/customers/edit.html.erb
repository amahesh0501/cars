  <% if @fields %>
    <%= f.text_field :phone, value: @fields["phone"] %>
  <% else %>
    <%= f.text_field :phone %>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :dob %><br/>
  <% if @fields %>
    <%= f.text_field :dob, value: @fields["dob"] %>
