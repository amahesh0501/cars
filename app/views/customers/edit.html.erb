    <%= f.text_field :dob %>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :ssn %><br/>
  <% if @fields %>
    <%= f.text_field :ssn, value: @fields["ssn"] %>
  <% else %>
    <%= f.text_field :ssn %>
  <% end %>
</div>
