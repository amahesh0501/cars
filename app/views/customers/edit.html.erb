<div class="container">
<%= form_for [@dealership, @customer] do |f| %>
<div class="form-group">
  <%= f.label :name %><br/>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :address%><br/>
  <%= f.text_field :address %>
</div>
<div class="form-group">
  <%= f.label :email %><br/>
  <%= f.text_field :email %>
</div>
<div class="form-group">
  <%= f.label :phone %><br/>
  <%= f.text_field :phone %>
</div>
<div class="form-group">
  <%= f.label :notes %><br/>
  <%= f.text_area :notes %>
</div>
<%= f.submit "Edit Customer", :class => 'btn btn-success'  %>
<% end %>
</div>