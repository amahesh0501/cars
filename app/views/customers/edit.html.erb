<div class="container">
<%= form_for [@dealership, @customer] do |f| %>
<%= render 'layouts/error_messages', object: f.object %>
<div class="form-group">
  <%= f.label :status%><br/>
  <%= f.select :status, ['Potential Customer', 'Existing Customer']%>
</div>
<div class="form-group">
  <%= f.label :name %><br/>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :address %><br/>
  <% if @fields %>
    <%= f.text_field :address, value: @fields["address"] %>
  <% else %>
    <%= f.text_field :address %>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :time_at_residence %><br/>
