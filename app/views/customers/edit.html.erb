<div class="page-container"><!-- add class "sidebar-collapsed" to close sidebar by default, "chat-visible" to make chat appear always -->

  <%= render 'layouts/sidebar' %>



  <div class="main-content">
    <%= render 'layouts/dealer_admin_nav' %>

    <h2>Edit Customer</h2>

    <%= form_for [@dealership, @customer], :html => {:class => "form-horizontal form-groups-bordered"} do |f| %>
    <%= render 'layouts/error_messages', object: f.object %>
    <div class="form-group">
      <label class="col-sm-3 control-label">First Name</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :first, value: @fields["first"], class: "form-control" %>
        <% else %>
          <%= f.text_field :first, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Last Name</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :last, value: @fields["last"], class: "form-control" %>
        <% else %>
          <%= f.text_field :last, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Address Line 1</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :address_line_1, value: @fields["address_line_1"], class: "form-control" %>
        <% else %>
          <%= f.text_field :address_line_1, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Address Line 2</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :address_line_2, value: @fields["address_line_2"], class: "form-control" %>
        <% else %>
          <%= f.text_field :address_line_2, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">City</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :address_city, value: @fields["address_city"], class: "form-control" %>
        <% else %>
          <%= f.text_field :address_city, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">State</label>
      <div class="col-sm-5">
        <%= f.select :address_state, @us_states, include_blank: "Please select a state"%>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Address Zip</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :address_zip, value: @fields["address_zip"], class: "form-control" %>
        <% else %>
          <%= f.text_field :address_zip, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Time at Residence</label>
      <div class="col-sm-5">
        <% if @fields %>
        <div class="input-group">
          <%= f.text_field :time_at_residence, value: @fields["time_at_residence"], class: "form-control"  %>
          <span class="input-group-addon">months</span>
        </div>
        <% else %>
          <div class="input-group">
            <%= f.text_field :time_at_residence, class: "form-control" %>
            <span class="input-group-addon">months</span>
          </div>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">E-Mail</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :email, value: @fields["email"], class: "form-control"  %>
        <% else %>
          <%= f.text_field :email,  class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Phone</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :phone, value: @fields["phone"], class: "form-control"  %>
        <% else %>
          <%= f.text_field :phone,  class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Date of Birth</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.date_field :dob, value: @fields["dob"], class: "form-control"  %>
        <% else %>
          <%= f.date_field :dob,  class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Social Security Number (Last 4 )</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :ssn, value: @fields["ssn"], class: "form-control"  %>
        <% else %>
          <%= f.text_field :ssn,  class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Driver License Number</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :driver_license_number, value: @fields["driver_license_number"], class: "form-control"  %>
        <% else %>
          <%= f.text_field :driver_license_number,  class: "form-control" %>
        <% end %>
      </div>
    </div>

    <br>
    <b> Employer Information </b>
    <div class="form-group">
      <label class="col-sm-3 control-label">Employer Company Name</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :employer, value: @fields["employer"], class: "form-control"  %>
        <% else %>
          <%= f.text_field :employer,  class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Address Line 1</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :employer_address_line_1, value: @fields["employer_address_line_1"], class: "form-control" %>
        <% else %>
          <%= f.text_field :employer_address_line_1, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Address Line 2</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :employer_address_line_2, value: @fields["employer_address_line_2"], class: "form-control" %>
        <% else %>
          <%= f.text_field :employer_address_line_2, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">City</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :employer_address_city, value: @fields["employer_address_city"], class: "form-control" %>
        <% else %>
          <%= f.text_field :employer_address_city, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">State</label>
      <div class="col-sm-5">
        <%= f.select :employer_address_state, @us_states, include_blank: "Please select a state"%>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Address Zip</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :employer_address_zip, value: @fields["employer_address_zip"], class: "form-control" %>
        <% else %>
          <%= f.text_field :employer_address_zip, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Employer Contact Name</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :employer_contact, value: @fields["employer_contact"], class: "form-control"  %>
        <% else %>
          <%= f.text_field :employer_contact,  class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Employer Contact Title</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :employer_title, value: @fields["employer_title"], class: "form-control"  %>
        <% else %>
          <%= f.text_field :employer_title,  class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Employer Contact Phone</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_field :employer_phone, value: @fields["employer_phone"], class: "form-control"  %>
        <% else %>
          <%= f.text_field :employer_phone,  class: "form-control" %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">Monthly Gross Salary</label>
      <div class="col-sm-5">
        <div class="input-group">
          <span class="input-group-addon">$</span>
          <% if @fields %>
          <%= f.text_field :monthly_gross_salary, value: @fields["monthly_gross_salary"], class: "form-control"  %>
          <% else %>
          <%= f.text_field :monthly_gross_salary,  class: "form-control" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Time at Employer</label>
      <div class="col-sm-5">
        <% if @fields %>
        <div class="input-group">
          <%= f.text_field :time_at_employer, value: @fields["time_at_employer"], class: "form-control"  %>
          <span class="input-group-addon">months</span>
        </div>
        <% else %>
          <div class="input-group">
            <%= f.text_field :time_at_employer, class: "form-control" %>
            <span class="input-group-addon">months</span>
          </div>
        <% end %>
      </div>
    </div>
    <br/>
    <b>Additional Notes</b>

    <div class="form-group">
      <label class="col-sm-3 control-label">Notes</label>
      <div class="col-sm-5">
        <% if @fields %>
          <%= f.text_area :notes, value: @fields["notes"], class: "form-control"  %>
        <% else %>
          <%= f.text_area :notes, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label"></label>
      <div class="col-sm-5">
            <%= f.submit "Update Customer", :class => 'btn btn-success'  %>
      </div>
    </div>





    <% end %>








  </div>
</div>

